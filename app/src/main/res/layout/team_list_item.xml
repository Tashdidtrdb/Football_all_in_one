<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_bg"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:padding="10dp"
    android:backgroundTint="@android:color/holo_red_light"
    android:background="@drawable/collapsed_team_item_bg">

    <ImageView
        android:id="@+id/team_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/manu_logo" />

    <TextView
        android:id="@+id/team_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:fontFamily="@font/arsenal"
        android:text="Manchester United"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#80FFFFFF"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        app:layout_constraintBottom_toBottomOf="@+id/team_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toEndOf="@+id/team_logo"
        app:layout_constraintTop_toTopOf="@+id/team_logo"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="Info"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg"
        app:layout_constraintEnd_toEndOf="@id/team_logo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/team_logo"
        app:layout_constraintTop_toBottomOf="@+id/team_logo"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:id="@+id/founded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="Founded: 1878"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/national"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="National: No"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/founded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toEndOf="@+id/founded"
        app:layout_constraintTop_toTopOf="@+id/founded"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="Country: England"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/founded"
        app:layout_constraintTop_toBottomOf="@+id/founded"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="Venue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintVertical_bias="0.475" />

    <TextView
        android:id="@+id/venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="Name: Old Trafford"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="@+id/venue"
        app:layout_constraintTop_toBottomOf="@+id/venue"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/venue_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="Address: Sir Matt Busby Way"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_name"
        app:layout_constraintTop_toBottomOf="@+id/venue_name"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/venue_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="City: Manchester"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/card_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_address"
        app:layout_constraintTop_toBottomOf="@+id/venue_address"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/venue_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal"
        android:text="Capacity: 76212"
        android:textSize="15sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/venue_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/national"
        app:layout_constraintTop_toTopOf="@+id/venue_name"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/stats_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@drawable/stats_button"
        app:layout_constraintBottom_toBottomOf="@+id/venue_city"
        app:layout_constraintEnd_toStartOf="@id/fixtures_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/venue_city"
        app:layout_constraintTop_toTopOf="@+id/venue_city"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/fixtures_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@drawable/fixtures_button"
        app:layout_constraintBottom_toBottomOf="@+id/venue_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_capacity"
        app:layout_constraintTop_toTopOf="@+id/venue_city"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/players_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@drawable/players_button"
        app:layout_constraintBottom_toBottomOf="@+id/venue_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fixtures_button"
        app:layout_constraintTop_toTopOf="@+id/venue_city"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/details_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="info,founded,country,national,venue,venue_name,venue_address,venue_city,venue_capacity,stats_button,fixtures_button,players_button" />
</androidx.constraintlayout.widget.ConstraintLayout>

